{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}
{% block meta_description %}Profil{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mon profil</h1><br>
    
{# <button><a href="{{ path('edit_user', {'id' : app.user.id})}}">Modifier user</a></button> #}

        <h2>Mes informations personnelles</h2><br>
        
        <p>Pseudo : {{app.user.pseudo}}</p><br>
