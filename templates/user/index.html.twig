        <p>Mot de passe : {{app.user.password}}</p><br>
        <button type="button" class="btn btn-outline-danger btn-sm"><a href="{{ path('upgrade_password', {'id' : app.user.id})}}">Modifier mot de passe</a></button><br><br>
        {# <button type="button" class="btn btn-outline-danger btn-sm"><a href="">Modifier mot de passe</a></button><br><br> #}

        <button type="button" class="btn btn-danger"><a href="{{ path('delete_user', {'id': app.user.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')">Supprimer mon compte</a></button>

    
