{% extends 'base.html.twig' %}

{% block title %}Stagiaires{% endblock %}
{% block meta_description %}Stagiaires{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des stagiaires :</h1><br>
        
        <table class="table table-striped table-info">
            <thead>
                <tr class="table-active">
                    <th>Prenom</th>
                    <th>Nom</th>
                    {% if is_granted('ROLE_ADMIN') %}
                    <th colspan="2">Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in stagiaires %}
                <tr>
                    <td><a href="{{path('show_stagiaire', {'id' : stagiaire.id})}}">{{stagiaire.prenom}}</td>
                    <td><a href="{{path('show_stagiaire', {'id' : stagiaire.id})}}">{{stagiaire.nom}}</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{path('edit_stagiaire', {'id' : stagiaire.id})}}"><img src="../img/crayon.png" alt="crayon" width="20"></a></td>
                        <td><a href="{{path('delete_stagiaire', {'id' : stagiaire.id})}}"><img src="../img/croix.png" alt="crayon" width="20"></a></td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}
            <button type="button" class="btn btn-outline-info"><a href="{{path('new_stagiaire')}}">Ajouter un stagiaire</a></button>   
        {% endif %}
    </div>


{% endblock %}
