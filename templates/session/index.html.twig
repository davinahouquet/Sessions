{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}
{% block meta_description %}Session{% endblock %}

{% block body %}
    <div class="container">
        <h1>Toutes nos sessions :</h1><br>
        
        <table class="table table-striped table-warning">
            <thead>
                <tr>
                    <th>Titre de la session</th>
                    {% if is_granted('ROLE_ADMIN') %}
                    <th colspan="2">Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for session in sessions %}
                <tr>
                    <td><a href="{{path('show_session', {'id' : session.id})}}">{{session.titre}}</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{path('edit_session', {'id' : session.id})}}"><img src="img/crayon.png" alt="crayon" width="20"></a></td>
                        <td><a href="{{path('delete_session', {'id' : session.id})}}"><img src="img/croix.png" alt="crayon" width="20"></a></td>
                    {% endif %}
                    {% endfor %}
                </tr>
            </tbody>
        </table>
                
            {% if is_granted('ROLE_ADMIN') %}
                <button type="button" class="btn btn-outline-warning"><a href="{{path('new_session')}}">Ajouter une session</a></button>
            {% endif %}
    </div>
{% endblock %}
