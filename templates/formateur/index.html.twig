{% extends 'base.html.twig' %}

{% block title %}Formateurs{% endblock %}

{% block body %}

    <div class="container">
        <h1>Liste de nos formteurs :</h1><br>

        <table class="table table-striped table-danger">
            <thead>
                <tr class="table-active">
                    <th>Prenom Nom</th>
                    <th>Nom</th>
                    {% if is_granted('ROLE_ADMIN') %}
                    <th colspan="2">Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                <tr>
                    {% for formateur in formateurs %}
                    <td><a href="{{path('show_formateur', {'id' : formateur.id})}}">{{formateur.prenom}}</a></td>
                    <td><a href="{{path('show_formateur', {'id' : formateur.id})}}">{{formateur.nom}}</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td><a href="{{path('edit_formateur', {'id' : formateur.id})}}">Editer</a></td>
                    <td><a href="{{path('delete_formateur', {'id' : formateur.id})}}">Supprimer</a></td>
                {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}
            <button type="button" class="btn btn-outline-danger"><a href="{{path('new_formateur')}}">Ajouter un formateur</a></button>
        {% endif %}
    </div>

{% endblock %}
