{% extends 'base.html.twig' %}

{% block title %}Détail d'une formation{% endblock %}

{% block body %}

    <div class="container">
        <button type="button" class="btn btn-outline-secondary"><a href="{{path('app_formation')}}">Retour aux formations</a></button><br><br>
        
        <h1>Détail de la formation {{formation.nomFormation}}</h1><br>

        <table class="table table-striped table-warning">
            <thead>
                <tr>
                    <th>Session</th>
                </tr>
            </thead>
            <tbody>
                {% for session in formation.sessions %}
                <tr>
                    <td>{{session}}</td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
        
    </div>
    

{% endblock %}