{% extends 'base.html.twig' %}

{% block title %}Détail d'un module{% endblock %}

{% block body %}
    <h1>Détail d'un module</h1>

    <h2>{{module.nomModule}}</h2>
    <p>{{module.categorie}}</p>
    
    {% if is_granted('ROLE_ADMIN') %}
        <button><a href="{{path('edit_module', {'id' : module.id})}}">Editer</a></button>
        <button><a href="{{path('delete_module', {'id' : module.id})}}">Supprimer</a></button>
    {% endif %}

{% endblock %}