{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

    {% for categorie in categories %}
        <a href="{{path('show_categorie', {'id' : categorie.id})}}">{{categorie.nomCategorie}}</a>
        {% if is_granted('ROLE_ADMIN') %}
            <button><a href="{{path('edit_categorie', {'id' : categorie.id})}}">Editer</a></button>
            <button><a href="{{path('delete_categorie', {'id' : categorie.id})}}">Supprimer</a></button>
        {% endif %}
        <br>
    {% endfor %}

    {% if is_granted('ROLE_ADMIN') %}
        <button><a href="{{path('new_categorie')}}">Ajouter une categorie</a></button>
    {% endif %}

{% endblock %}
